{
  "name": "reason-language-server",
  "version": "1.0.0",
  "scripts": {
    "cp-test": "cp #{self.target_dir}/install/default/bin/ExamplesTests ExamplesTests.exe",
    "cp-alltests": "cp #{self.target_dir}/default/src/analyze_fixture_tests/AllTests.exe AllTests.exe",
    "package": "esy build && esy cp \"#{self.target_dir}/default/bin/Bin.exe\" editor-extensions/vscode/bin.native",
    "zip": "./release.sh",
    "check-self-definitions": "fd -E examples '.*\\.re$' | xargs ./bin.exe check -q -d .",
    "alltests": "dune exec AllTests",
    "vsce": "cd editor-extensions/vscode && vsce package",
    "reprocess-ocaml": "(cd process_ocaml; ./build.sh); esy",
    "symlink": "esy ln -s '#{self.target_dir}/install/default/bin/Bin' bin.exe",
    "cp-bin": "cp #{self.target_dir}/install/default/bin/Bin bin.exe"
  },
  "keywords": [
    "Reason",
    "lsp",
    "IDE"
  ],
  "repository": {
    "url": "jaredly/reason-language-server",
    "type": "git"
  },
  "description": "A pure-reason implementation of a language server",
  "author": "Jared Forsyth",
  "license": "ISC",
  "esy": {
    "build": "dune build -p #{self.name}"
  },
  "dependencies": {
    "@opam/dune": "*",
    "@opam/reason": ">= 3.5.0",
    "@opam/ocaml-migrate-parsetree": ">= 1.3.1",
    "@opam/ppx_tools_versioned": "*",
    "@opam/ppxlib": "*",
    "@opam/stdlib-shims": "*",
    "rex-json": "*",
    "ocaml": "~4.8.1000"
  }
}
